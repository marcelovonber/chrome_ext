{
  "manifest_version": 3,
  "name": "OpenAI Copi",
  "version": "1.0",
  "description": "A Chrome extension that reads active inputs and processes text using the OpenAI API.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
